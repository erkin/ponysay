@item --F [PONY...]
@itemx --any-files [PONY...]
@itemx --anyfiles [PONY...]
@itemx --any-ponies [PONY...]
@itemx --anyponies [PONY...]
@opindex @option{--F}
@opindex @option{--any-file}
@opindex @option{--anyfile}
@opindex @option{--any-pony}
@opindex @option{--anypony}
